    "import-srd:2014": "node scripts/import-srd-data.js --documents srd-2014",
    "import-srd:2024": "node scripts/import-srd-data.js --documents srd-2024"
  },
  "dependencies": {
    "@types/multer": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "ollama": "^0.5.18",
    "pg": "^8.16.3",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
