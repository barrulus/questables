{
  "name": "dnd-app-database-server",
  "version": "1.0.0",
  "description": "Local PostgreSQL database server for D&D web app",
  "main": "database-server.js",
  "type": "module",
  "scripts": {
    "start": "node database-server.js",
    "dev": "node node_modules/nodemon/bin/nodemon.js database-server.js",
    "setup": "node setup-database.js",
